<main class="profile-form__wrapper">
      <!-- Profile Main Form -->

      <section class="profile-form-section">
        <div class="head-section">
          <h2>Profile</h2>
          <p class="sub-title">My Account Details</p>
          <p class="desc">
            Please ensure that your personal details and account information are
            always accurate and up-to-date
          </p>
        </div>

        <form action="" method="post" id="profile-form" class="profile-form">
          <fieldset>
            <div class="field" aria-disabled="true">
              <a href="javascript:void(0);" class="edit-link edit-name" title="edit">edit</a>
              <label for="first name">First Name</label>
              <div class="control">
                <input
                  type="text"
                  name="first name"
                  aria-label="First Name"
                  placeholder="First Name"
                  disabled
                />
              </div>
            </div>
            <div class="field" aria-disabled="true">
              <label for="last name">Last Name</label>
              <div class="control">
                <input
                  type="text"
                  name="last name"
                  aria-label="Last Name"
                  placeholder="Last name"
                  disabled
                />
              </div>
            </div>
            <hr />
            <div class="field" aria-disabled="true">
              <a href="javascript:void(0);" class="edit-link edit-email" title="edit">edit</a>
              <label for="email address">Email Address</label>
              <div class="control">
                <input
                  type="email"
                  name="email address"
                  aria-label="Email Address"
                  placeholder="email@email.com"
                  disabled
                />
              </div>
              <div class="tagline">
                If you update your email address, you'll need to verify it again
                for security purposes.
              </div>
            </div>
            <hr />
            <div class="field" aria-disabled="true">
              <a href="javascript:void(0);" class="edit-link edit-address" title="edit">edit</a>
              <label for="address">Address</label>
              <div class="control">
                <textarea
                  name="address"
                  aria-label="Address"
                  disabled
                ></textarea>
              </div>
            </div>
          </fieldset>
        </form>
      </section>

      <!-- Update Name form -->

      <section class="update-name-section">
        <div class="head-section">
          <h2>Update Name</h2>
        </div>
        <form
          action=""
          method="post"
          id="update-name-form"
          class="update-name-form"
        >
          <fieldset>
            <div class="field">
              <label for="first name">First Name</label>
              <div class="control">
                <input
                  type="text"
                  name="first name"
                  aria-label="First Name"
                  placeholder="First Name"
                />
              </div>
            </div>
            <div class="field">
              <label for="last name">Last Name</label>
              <div class="control">
                <input
                  type="text"
                  name="last name"
                  aria-label="Last Name"
                  placeholder="Last name"
                />
              </div>
            </div>
            <div class="actions-bar">
              <button
                type="submit"
                class="form-submit-btn"
                aria-label="update name"
              >
                update name
              </button>
              <a href="javascript:void(0);" class="back-link" title="Go back">Go back</a>
            </div>
          </fieldset>
        </form>
      </section>

      <!-- Update Email form -->

      <section class="update-email-section">
        <div class="head-section">
          <h2>Update Email</h2>
        </div>
        <form
          action=""
          method="post"
          id="update-email-form"
          class="update-email-form"
        >
          <fieldset>
            <div class="field" aria-disabled="true">
              <label for="Current Email Address">Current Email Address</label>
              <div class="control">
                <input
                  type="email"
                  name="Current Email Address"
                  aria-label="Current Email Address"
                  disabled
                  placeholder="Current Email Address"
                />
              </div>
            </div>
            <div class="field">
              <label for="New Email Address">New Email Address</label>
              <div class="control">
                <input
                  type="email"
                  name="New Email Address"
                  aria-label="New Email Address"
                  placeholder="New Email Address"
                />
                <div class="error">The email provided has not yet been verified. Please verify your email for account security and updates.</div>
              </div>
            </div>
            <div class="field">
              <label for="Confirm New Email Address"
                >Confirm New Email Address</label
              >
              <div class="control">
                <input
                  type="email"
                  name="Confirm New Email Address"
                  aria-label="Confirm New Email Address"
                  placeholder="Confirm New Email Address"
                />
              </div>
            </div>
            <div class="actions-bar">
              <button
                type="submit"
                class="form-submit-btn"
                aria-label="update Email"
              >
                update Email
              </button>
              <a href="javascript:void(0);" class="back-link" title="Go back">Go back</a>
            </div>
          </fieldset>
        </form>
      </section>

      <!-- Update Delivery Address form -->

      <section class="update-delivery-address-section">
        <div class="head-section">
          <h2>Delivery Address</h2>
        </div>
        <form
          action=""
          method="post"
          id="update-delivery-address-form"
          class="update-delivery-address-form"
        >
          <fieldset>
            <div class="field">
              <label for="Update Address">Address</label>
              <div class="control">
                <input
                  type="text"
                  class="address-input-text"
                  name="Update Address"
                  aria-label="Update Address"
                  placeholder="Update Address"
                />
              </div>
            </div>

            <div class="field">
              <label for="Update Address 2"
                >Apt / Villa Number & Building / Villa Name</label
              >
              <div class="control">
                <input
                  type="text"
                  name="Update Address 2"
                  aria-label="Update Address 2"
                  placeholder="Update Address 2"
                />
              </div>
            </div>

            <div class="field field-row">
              <div class="field">
                <label for="City">City</label>
                <div class="control">
                  <select name="City" aria-label="City">
                    <option value="">Abu Dhabi</option>
                  </select>
                </div>
              </div>
              <div class="field">
                <label for="District">District</label>
                <div class="control">
                  <select name="District" aria-label="City">
                    <option value="">Al Reem Island</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="actions-bar">
              <button
                type="submit"
                class="form-submit-btn"
                aria-label="update Address"
              >
                update Address
              </button>
              <a href="javascript:void(0);" class="back-link" title="Go back">Go back</a>
            </div>
          </fieldset>
        </form>
      </section>

      <!-- My Account footer -->

      <div>Footer</div>
    </main>


<script>
  jQuery(document).ready(function () {

    jQuery('.edit-name').click(function () {
        jQuery('.profile-form-section').addClass('active-form');
        jQuery('.update-name-section').addClass('active-section');    
    })

    jQuery('.edit-email').click(function () {
        jQuery('.profile-form-section').addClass('active-form');
        jQuery('.update-email-section').addClass('active-section');    
    })

    jQuery('.edit-address').click(function () {
        jQuery('.profile-form-section').addClass('active-form');
        jQuery('.update-delivery-address-section').addClass('active-section');    
    })

    jQuery('.back-link').click(function () {
        setTimeout(() => {
            jQuery('.profile-form-section').removeClass('active-form');
        }, 800);
        jQuery('.update-name-section,.update-email-section,.update-delivery-address-section').removeClass('active-section');    
    })

})
</script>


<style>
  :root {
    --white-color-1: #ffffff;
    --white-color-2: #eff2f6;
    --blue-color-1: #001489;
    --blue-color-2: #2461cc;
    --grey-color-1: #1f1f20;
    --grey-color-2: #2c2d2e;
    --disabled-text-color: #6b6e71;
    --disabled-border-color: #cdd5dd;
    --red-color: #DF1515;

    --fonts-family: "Rubik", sans-serif;

    --font-small: 14px;
    --font-base: 16px;
    --font-large: 18px;
    --font-x-large: 20px;

    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;

    --w-full: 100%;
    
    --pad-0: 0;
    --mar-0: 0;
}

/* Font face */

.profile-form__wrapper {
    max-width: 800px;
    margin: auto;
    font-family: var(--fonts-family);
    overflow: hidden;
    position: relative;
}

.profile-form__wrapper section {
    width: 100%;
    
}

.profile-form-section.active-form {
    transform: translateX(0);
    position: relative;
    top: 0;
    transition: all 0.8s ease 0s;
}


.profile-form-section.active-form {
    transform: translateX(-100%);
}


.update-name-section,
.update-email-section,
.update-delivery-address-section {
    transition: all 1s ease 0s;
    transform: translateX(100%);
    position: absolute;
    top: 0;
}

.update-name-section.active-section,
.update-email-section.active-section,
.update-delivery-address-section.active-section {
    transform: translateX(0);
}


.profile-form__wrapper .head-section {
    text-align: center;
    max-width: 550px;
    margin: 60px auto 30px;
}

.profile-form__wrapper h2 {
    color: var(--blue-color-1);
    font-weight: var(--font-weight-normal);
    font-size: 32px;
    text-transform: capitalize;
    margin-bottom: 20px;
    font-family: var(--fonts-family);
}

.profile-form__wrapper .sub-title {
    font-weight: var(--font-weight-medium);
    font-size: var(--font-large);
    margin-bottom: 15px;
    color: var(--grey-color-2);
    font-family: var(--fonts-family);
}

.profile-form__wrapper .desc {
    color: #595a5e;
    font-size: var(--font-base);
    font-weight: var(--font-weight-normal);
    font-family: var(--fonts-family);
}

.profile-form__wrapper form {
    padding: 96px;
    border-radius: 20px;
    background-color: var(--white-color-2);
}

.profile-form__wrapper hr {
    margin: 15px 0 45px;
    border-radius: 0;
    border: var(--white-color-1) solid 1px;
}

.profile-form__wrapper fieldset {
    box-sizing: border-box;
    opacity: 1;
    margin-left: auto;
    margin-right: auto;
    border: 0;
}

.profile-form__wrapper fieldset .tagline {
    font-size: 12px;
    font-weight: var(--font-weight-normal);
    color: var(--disabled-text-color);
    line-height: 18px;
    padding-top: 10px;
    padding-left: 24px;
    padding-right: 24px;
}

.profile-form__wrapper .error {
    font-size: 12px;
    font-weight: var(--font-weight-normal);
    color: var(--red-color);
    line-height: 18px;
    padding-top: 10px;
    padding-left: 24px;
    padding-right: 24px;
}

.profile-form__wrapper fieldset .field {
    display: inline-block;
    width: var(--w-full);
    margin-bottom: 30px;
    position: relative;
}

.profile-form__wrapper fieldset .field-row {
    display: inline-flex;
    justify-content: space-between;
    margin-bottom: 0;
}

.profile-form__wrapper fieldset .field-row .field {
    width: calc(50% - 8px);
}

.profile-form__wrapper label {
    margin-bottom: 10px;
    font-size: var(--font-small);
    font-weight: var(--font-weight-normal);
    color: var(--blue-color-1);
    display: block;
    text-transform: capitalize;
    font-family: var(--fonts-family);
}

.profile-form__wrapper fieldset .field .edit-link {
    position: absolute;
    right: 0;
    color: var(--blue-color-2);
    font-size: var(--font-small);
    font-weight: var(--font-weight-normal);
    text-decoration: underline;
    text-transform: capitalize;
}

.profile-form__wrapper [aria-disabled="true"] {
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    user-select: none;    
}

.profile-form__wrapper [aria-disabled="true"] label {
    color: var(--grey-color-1);
}

.profile-form__wrapper input[type="text"],
.profile-form__wrapper input[type="email"],
.profile-form__wrapper select,
.profile-form__wrapper textarea {
    background-color: var(--white-color-1);
    font-weight: var(--font-weight-normal);
    min-height: 72px;
    width: var(--w-full);
    border: 1px solid var(--blue-color-1);
    display: block;
    font-size: var(--font-large);    
    padding: var(--pad-0) 24px;
    outline: 0;
    color: var(--grey-color-1);
    border-radius: 8px;
    resize: none;
    transition: all 0.3s ease 0s;
}

