{%- liquid
	if customer
  	assign profile_link = routes.account_url
	else
  	assign profile_link = routes.account_login_url
	endif
-%}

{{ 'header-my-account-dropdown.css' | asset_url | stylesheet_tag }}

<div class="thb-secondary-area thb-header-right">
	<a class="thb-secondary-area-item thb-quick-search" href="{{ routes.search_url }}" title="{{ 'sections.header.search' | t }}">{%- render 'svg-icons' with 'search' -%}</a>
	{%- if shop.customer_accounts_enabled -%}
    <a class="thb-secondary-area-item thb-secondary-myaccount" href="{{ profile_link | escape }}" title="{{ 'sections.header.my_account' | t }}">{%- render 'svg-icons' with 'myaccount' -%}</a>
    <div class="my-account__wrapper">
      <div class="my-account-dropdown__wrapper">
        <a class="thb-secondary-area-item thb-secondary-myaccount my-accont-link" href="{{ profile_link | escape }}" title="{{ 'sections.header.my_account' | t }}">{%- render 'svg-icons' with 'myaccount' -%} My Account</a>
        <ul class="my-account-dropdown__wrapper-list">
            <li><a title="Home" href="#">Home</a></li>
            <li><a title="Profile" href="#">Profile</a></li>
            <li><a title="Orders & Deliveries" href="#">Orders & Deliveries</a></li>
            <li><a title="Manage Subscription" href="#">Manage Subscription</a></li>
            <li><a title="Wallet" href="#">Wallet</a></li>
            <li><a title="My Loyalty Drops" href="#">My Loyalty Drops</a></li>
            <li><a title="Logout" href="#">Logout</a></li>
        </ul>
      </div>
    </div>
      
  {%- endif -%}
	<a class="thb-secondary-area-item thb-secondary-cart" href="{{ routes.cart_url }}" id="cart-drawer-toggle"><div class="thb-secondary-item-icon">{% render 'svg-icons' with 'cart' %} <span class="thb-item-count">{%- if cart.item_count > 99 -%}{%- render 'svg-icons' with 'thb-asterisk' -%}{%- else -%}{{ cart.item_count }}{%- endif -%}</span></div></a>
</div>
