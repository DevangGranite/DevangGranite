{%- liquid
  if customer
    assign profile_link = routes.account_url
  else
    assign profile_link = routes.account_login_url
  endif
-%}

{{ 'header-my-account-dropdown.css' | asset_url | stylesheet_tag }}

<div class="thb-secondary-area thb-header-right">
  <a
    class="thb-secondary-area-item thb-quick-search"
    href="{{ routes.search_url }}"
    title="{{ 'sections.header.search' | t }}"
  >
    {%- render 'svg-icons' with 'search' -%}
  </a>
  {%- if shop.customer_accounts_enabled -%}
    <a
      class="thb-secondary-area-item thb-secondary-myaccount"
      href="{{ profile_link | escape }}"
      title="{{ 'sections.header.my_account' | t }}"
    >
      {%- render 'svg-icons' with 'myaccount' -%}
    </a>
    <div class="thb-secondary-area-item my-account__wrapper">
      <div class="my-account-dropdown__wrapper">
        <a
          class="thb-secondary-area-item thb-secondary-myaccount my-accont-link"
          href="{{ profile_link | escape }}"
          title="{{ 'sections.header.my_account' | t }}"
        >
          {%- render 'svg-icons' with 'myaccount' -%}
          My Account
          <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M11 10L8 7L5 10" stroke="#2461CC" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <ul class="my-account-dropdown__wrapper-list">
          <li><a title="Home" href="#">Home</a></li>
          <li><a title="Profile" href="#">Profile</a></li>
          <li><a title="Orders & Deliveries" href="#">Orders & Deliveries</a></li>
          <li><a title="Manage Subscription" href="#">Manage Subscription</a></li>
          <li><a title="Wallet" href="#">Wallet</a></li>
          <li><a title="My Loyalty Drops" href="#">My Loyalty Drops</a></li>
          <li>
            <a title="Logout" href="#">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M19.1754 10.8214L15.8754 7.52136L14.9334 8.4667L17.8 11.3334H8.41138V12.6667H17.8L14.9334 15.5334L15.876 16.476L19.176 13.176C19.3309 13.0213 19.4537 12.8375 19.5374 12.6353C19.6212 12.433 19.6644 12.2163 19.6644 11.9974C19.6644 11.7785 19.6212 11.5617 19.5374 11.3595C19.4537 11.1572 19.3309 10.9735 19.176 10.8187L19.1754 10.8214Z" fill="#2C2D2E"/>
                <path d="M10.984 18C10.984 18.1768 10.9138 18.3464 10.7887 18.4714C10.6637 18.5964 10.4941 18.6667 10.3173 18.6667H6C5.82319 18.6667 5.65362 18.5964 5.5286 18.4714C5.40357 18.3464 5.33333 18.1768 5.33333 18V6C5.33333 5.82319 5.40357 5.65362 5.5286 5.5286C5.65362 5.40357 5.82319 5.33333 6 5.33333H10.3173C10.4941 5.33333 10.6637 5.40357 10.7887 5.5286C10.9138 5.65362 10.984 5.82319 10.984 6V9.55533H12.3173V6C12.3173 5.46957 12.1066 4.96086 11.7315 4.58579C11.3565 4.21071 10.8478 4 10.3173 4H6C5.46957 4 4.96086 4.21071 4.58579 4.58579C4.21071 4.96086 4 5.46957 4 6V18C4 18.5304 4.21071 19.0391 4.58579 19.4142C4.96086 19.7893 5.46957 20 6 20H10.3173C10.8478 20 11.3565 19.7893 11.7315 19.4142C12.1066 19.0391 12.3173 18.5304 12.3173 18V14.4447H10.984V18Z" fill="#2C2D2E"/>
              </svg>
              Logout</a
            >
          </li>
        </ul>
      </div>
    </div>
  {%- endif -%}
  <a class="thb-secondary-area-item thb-secondary-cart" href="{{ routes.cart_url }}" id="cart-drawer-toggle">
    <div class="thb-secondary-item-icon">
      {% render 'svg-icons' with 'cart' %}
      <span class="thb-item-count">
        {%- if cart.item_count > 99 -%}
          {%- render 'svg-icons' with 'thb-asterisk' -%}
        {%- else -%}
          {{ cart.item_count }}
        {%- endif -%}
      </span>
    </div>
  </a>
</div>
