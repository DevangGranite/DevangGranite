document.addEventListener("DOMContentLoaded", function() {
    var openHelpWallet = document.querySelector('.open_help_wallet');
    var closeHelpWallet = document.querySelector('.close_help_wallet');
    var detailDiv = document.querySelector('.total_ballane_detail_div');
    var helpDiv = document.querySelector('.total_ballane_detail_help_div');
    var closeButton = document.querySelector('.close_help_wallet');
    var openButton = document.querySelector('.open_help_wallet');

    closeHelpWallet.style.display = 'none'; // Hide the close button initially

    openHelpWallet.addEventListener('click', function() {
        fadeIn(helpDiv);
        fadeOut(detailDiv);
        closeButton.style.display = 'inline'; // Show the close button
        openButton.style.display = 'none'; // Hide the open button
    });

    closeHelpWallet.addEventListener('click', function() {
        fadeIn(detailDiv);
        fadeOut(helpDiv);
        closeButton.style.display = 'none'; // Hide the close button
        openButton.style.display = 'inline'; // Show the open button
    });

    function fadeIn(element) {
        element.classList.remove('hidden');
        setTimeout(function() {
            element.style.opacity = '1';
        }, 10); // Delay to allow opacity change to take effect before display change
    }

    function fadeOut(element) {
        setTimeout(function() {
            element.style.opacity = '0';
        }, 10); // Delay to allow opacity change to take effect before display change
        setTimeout(function() {
            element.classList.add('hidden');
        }, 500); // Matches transition duration (0.5s)
    }
});
</script>
