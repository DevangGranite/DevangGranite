    function toggleOTPFields() {
        var otpFields = document.getElementById('otpFields');
        otpFields.style.display = 'block';
        // You can add logic here to trigger OTP sending and countdown timer.
    }

    function validateAndSwitch(currentInput) {
        // Add your validation logic if needed
        if (currentInput.value.length === currentInput.maxLength) {
            var nextInput = currentInput.nextElementSibling;
            if (nextInput) {
                nextInput.focus();
